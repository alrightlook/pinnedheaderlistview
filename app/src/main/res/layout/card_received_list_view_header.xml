<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:orientation="horizontal"

              >

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:orientation="horizontal"
            android:id="@+id/pull_header_layout_out_container"
            android:gravity="center"
            android:background="@color/topbar_bg">
        <ProgressBar android:layout_width="30dp" android:layout_height="30dp"
                     style="@android:style/Widget.ProgressBar.Small"
                     android:layout_marginLeft="50dp"
                     android:id="@+id/progressbar"/>

        <ImageView android:layout_width="32dp" android:layout_height="32dp"
                   android:src="@drawable/ic_menu_move_down"
                   android:id="@+id/iv_state"
                />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="15sp"
                  android:textColor="@color/white"
                  android:id="@+id/tv_state"
                />
            </LinearLayout>
</RelativeLayout>